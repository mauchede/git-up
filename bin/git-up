#!/bin/bash
set -e

[[ -z $IMAGE ]] && IMAGE="mauchede/git-up"
[[ -z $TAG ]] && TAG="0.5.12"

docker run \
    --rm \
    -v /etc/group:/etc/group:ro \
    -v /etc/passwd:/etc/passwd:ro \
    -v /etc/localtime:/etc/localtime:ro \
    -v $HOME:$HOME \
    -v "$PWD:$PWD" \
    -u $USER \
    -w "$PWD" \
    -ti $IMAGE:$TAG "$@"
