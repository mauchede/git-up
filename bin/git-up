#!/bin/bash
set -e

IMAGE=${IMAGE:-timonier/git-up}
TAG=${TAG:-0.5.12}

docker run \
    --rm \
    -v /etc/group:/etc/group:ro \
    -v /etc/passwd:/etc/passwd:ro \
    -v /etc/localtime:/etc/localtime:ro \
    -v $HOME:$HOME \
    -v "$PWD:$PWD" \
    -u $USER \
    -w "$PWD" \
    -ti $IMAGE:$TAG "$@"
